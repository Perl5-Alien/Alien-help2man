use alienfile;

probe sub { 'share' };

share {
  plugin Download => (
    url => 'ftp://ftp.gnu.org/gnu/help2man',
    filter => qr/^help2man-.*\.tar\.gz$/,
    version => qr/([0-9\.]+)/,
  );
  plugin Extract => 'tar.gz',
  
  plugin 'Build::MSYS';
  
  build [
    'sh configure --prefix=%{.install.prefix}',
    '%{make}',
    [ '%{make}', 'install' ],
  ];
};
